.loading {
    background-color: #ffffff;
    background-image: url("/img/loading.gif");
    background-size: 25px 25px;
    background-position:right center;
    background-repeat: no-repeat;
}

body {
    height: 100px;
}

label {
    padding-right: 10px;
}

.rack {
    padding: 0;
}

.rack_header {
    text-align: center;
    vertical-align: middle;
    margin-bottom: 0;
}

.rack_panel {
    height: auto;
}

.card {
    min-height: 190px;
}

.card-header {
    font-weight: 700;
}

.card-body {
    padding: 0;
}

.card-body .info {
    padding-left: 15px;
    padding-right: 16px;
}

.shelf_number_container {
    padding-top: 0 !important;
    padding-bottom: 10 !important;
}

[id^="relaunch_button-"] {
    margin-left: 15px;
}

.relaunch_button {
    width: 100px;
}

.log {
    height: 120px;
    margin-right: 15px;
    overflow-y: scroll;
    background-color: white;
}

#dialog-message {
    height: auto !important;
}

#MenuModalCopy #invoice_button-modal, #MenuModalCopy #model_button-modal, #MenuModalCopy #all_button-modal {
    margin-bottom: 10px;
}

#MenuModalCopy .modal-body .btn {
    width: 100%;
    border: 1px solid black;
}


#MenuModalTicket .modal-body h4 {
  color: #000;
  font-family: Verdana;
  /*text-shadow: #555 2px 2px 3px;*/
}


#MenuModalTicket .modal-body h4.box1 {
width: 100%;
margin:10px 50px;
padding:20px;
font-family: Verdana;
font-size:italic;
background-color:#fff;
color:#000;
