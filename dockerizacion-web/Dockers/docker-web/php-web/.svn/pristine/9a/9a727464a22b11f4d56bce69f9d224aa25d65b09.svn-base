}



.panel_rack {
    padding-right: 5px;
    padding-left: 5px;
    margin-top: 10px;
}

.btn_rack {
    font-weight: bold;
}

label.error {
    float: none;
    color: red;
    padding-left: .5em;
    display: block;
}

input.input_response {
    width: 80%;
    display: inline-block;
}

.btn.response {
    margin: 2px;
}

.btn.test_in_hand_response  {
    margin: 2px;
}

.noselect {
    -webkit-touch-callout: none; /* iOS Safari */
    -webkit-user-select: none; /* Safari */
    -khtml-user-select: none; /* Konqueror HTML */
    -moz-user-select: none; /* Firefox */
    -ms-user-select: none; /* Internet Explorer/Edge */
    user-select: none; /* Non-prefixed version, currently supported by Chrome and Opera */
}

.default_answer_all_button {
    display: none;
}

.form-check-label {
    margin-left: 6px;
}

#loops {
    width: 70px;
    text-align: center;
}

.popover{
    max-width: none;
}

body, .sticky-footer-wrapper {
    min-height: 90vh;
}

.flex-fill {
    flex: 1 1 auto;
}